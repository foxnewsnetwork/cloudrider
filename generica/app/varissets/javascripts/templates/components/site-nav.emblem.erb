<% case nav_style %>
<% when :left %>
.nav-button
  link-to "index" (query-params anchor="") class="side-nav"
    i.fa.fa-home
    span.capitalize.prespace <%= my_company_name %>
.nav-button
  link-to "index" (query-params anchor="about") class="side-nav"
    i.fa.fa-info-circle
    span.capitalize.prespace 
      tr-span en="about"
.nav-button
  link-to "index" (query-params anchor="products") class="side-nav"
    i.fa.fa-tags
    span.capitalize.prespace 
      tr-span en="products"
.nav-button
  link-to "index" (query-params anchor="contacts") class="side-nav"
    i.fa.fa-envelope
    span.capitalize.prespace 
      tr-span en="contacts"
<% when :top %>
.possible-container
  link-to "index" (query-params anchor="") class="title-area"
    .hide-for-medium-up
      i.fa.fa-home
    .company-name.show-for-medium-up <%= my_company_name %>

  section.options-menu
    link-to "index" (query-params anchor="about") class="menu-tab"
      .hide-for-medium-up
        i.fa.fa-info-circle
      .menu-nav.show-for-medium-up 
        tr-span en="about"
    link-to "index" (query-params anchor="products") class="menu-tab"
      .hide-for-medium-up
        i.fa.fa-tags
      .menu-nav.show-for-medium-up 
        tr-span en="products"
    link-to "index" (query-params anchor="contacts") class="menu-tab"
      .hide-for-medium-up
        i.fa.fa-envelope
      .menu-nav.show-for-medium-up 
        tr-span en="contacts"

<% when :mid %>
<% end %>