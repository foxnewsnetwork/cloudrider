<% case booth_style %>
<% when :contact_form %>
.business-cards-side.small-12.large-6.columns
  .row
    .small-12.columns
      h2.capitalize.align-right
        tr-span en="our team"
  .row
    each contact in contacts
      .small-12.medium-6.columns
        .business-card.panel.radius
          .text-right
            .name.capitalize= contact.personName
            .job= contact.employeeTitle

          .text-left
            .info
              span.bold.capitalize.colon
                tr-span en="email"
              span.prespace= contact.email
            .info
              span.bold.capitalize.colon
                tr-span en="phone"
              span.prespace= contact.phoneNumber

    else
      .small-12.medium-6.columns
        .business-card.panel.radius
          .text-right
            .name
              i.fa.fa-cog.fa-spin
              span.capitalize.prespace 
                tr-span en="loading employees"
            .job
              tr-span en="or perhaps no employees have been listed"

.contact-form-side.small-12.large-6.columns
  .row
    .small-12.columns
      h2.capitalize.white.align-left
        tr-span en="contact us"
      form
        label
          .capitalize.white
            span.asterisk
            tr-span en="your company"
          input type="text" placeholder="ex. Jack Smith"

        label
          .capitalize.white
            span.asterisk
            tr-span en="company email"
          input type="email" placeholder="ex. jsmith@gmail.com"

        label
          .capitalize.white
            span.asterisk
            tr-span en="subject"
          input type="text"
          
        label
          .capitalize.white
            span.asterisk
            tr-span en="message"
          textarea

        .button-forms
          button class="button expand"
            span.capitalize 
              tr-span en="submit"
<% :just_cards %>
.business-cards
  .row
    each employee in employees
      .small-6.medium-4.large-4.columns
        a.vertical-card href=employee.emailTo
          .media
            .mug-shot
              img.th.mugshot src=employee.mugUrl
            .title
              .name= employee.personName
              .job= employee.employeeTitle
          .info
            .thing
              span.bold.capitalize.colon
                tr-span en="email"
              span.prespace= employee.email
            .thing
              span.bold.capitalize.colon
                tr-span en="phone"
              span.prespace= employee.phoneNumber
    else
      .small-6.medium-4.large-4.columns.end
        .vertical-card
          .mug-shot
            i.fa.fa-cog.fa-spin.fa-3x
          .name
            tr-span en="loading employees"
          .job
            tr-span en="or perhaps you don't have employees yet"

  .row
    .small-12.columns
      h3.call-us
        tr-span en=<%= contact_us_call_to_action.inspect %>
        span.spacebar
          a.email-us href="mailto:<%= main_contact_email %>"
            tr-span en="send us an email"
            span.prespace <%= main_contact_email %>
<% end %>