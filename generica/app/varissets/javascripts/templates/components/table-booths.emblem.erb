<% case booth_style %>
<% when :card_by_side %>
.row
  .small-12.medium-6.columns.filler-picture
    .form-card
      .title
        tr-span en="contact us"
      .contact-info
        dl.various-info
          dt.capitalize
            tr-span en="address"
          dd <%= company_address %>
          dt.capitalize
            tr-span en="phone"
          dd <%= company_phone_number %>
          dt.capitalize
            tr-span en="email"
          dd <%= company_email %>
    
  .small-12.medium-6.columns.form-card
    == render "messages/new" message
<% when :just_contact %>
.contact-us-picture.large-6.columns.show-for-large-up
  .ctn
    h2.title
      tr-span en="contact us"
.contact-form-side.small-12.large-6.columns.ends
  .ctn
    == render "messages/new" message
<% when :contact_form %>
.business-cards-side.small-12.large-6.columns
  == render "employees/index" contacts
  

.contact-form-side.small-12.large-6.columns
  == render "messages/new" message
<% when :just_cards %>
.business-cards
  .row
    each employee in employees
      .small-6.medium-4.large-4.columns
        a.vertical-card href=employee.emailTo
          .media
            .mug-shot
              img.th.mugshot src=employee.mugUrl
            .title
              .name= employee.personName
              .job= employee.employeeTitle
          .info
            .thing
              span.bold.capitalize.colon
                tr-span en="email"
              span.prespace= employee.email
            .thing
              span.bold.capitalize.colon
                tr-span en="phone"
              span.prespace= employee.phoneNumber
    else
      .small-6.medium-4.large-4.columns.end
        .vertical-card
          .mug-shot
            i.fa.fa-cog.fa-spin.fa-3x
          .name
            tr-span en="loading employees"
          .job
            tr-span en="or perhaps you don't have employees yet"

  .row
    .small-12.columns
      h3.call-us
        tr-span en=<%= contact_us_call_to_action.inspect %>
        span.spacebar
          a.email-us href="mailto:<%= main_contact_email %>"
            tr-span en="send us an email"
            span.prespace <%= main_contact_email %>
<% end %>