<% case splash_style %>
<% when :wechat %>
.splash-background.standard-container
  .page-intro
    .active-page-title
      tr-span en="products"
      img.th.product-icon src=<%= icon_image_url.inspect %>

.standard-container
  .cookiecrumbs
    .small-6.medium-4.large-3.columns.crumb
      link-to "index" (query-params anchor="products")
        .show-for-small-only
          i.fa.fa-chevron-left
        .hide-for-small-only.upcase
          tr-span en="home"
<% end %>          