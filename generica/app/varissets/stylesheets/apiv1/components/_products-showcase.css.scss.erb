.products-showcase {
<% case showcase_style %>
<% when :big_media %>
  .contained-media-one {
    padding-top: 5rem;
    border-top: 2px solid #777;
  }
  .product-container {
    @include display-flex;
    @include justify-content(center);
  }
  .product-row {
    width: $row-width;
  }
  .container-row {
    @include display-flex;
    @include align-items(flex-end);
    @include align-content(flex-end);
    @include flex-direction(row);
    @include flex-wrap(wrap-reverse);
  }
  .product-post-note {
    @include display-flex;
    @include justify-content(center);
    @include flex-direction(column);
    background: {
      image: <%= post_note_background_url %>;
      size: <%= post_note_background_size %>;
      position: <%= post_note_background_position %>;
    }
    min-height: 30rem;
  }
  .after-thought {
    text-align: center;
    font-weight: bolder;
    background-color: fade-out(#fff, 0.4);
  }
<% end %>
}