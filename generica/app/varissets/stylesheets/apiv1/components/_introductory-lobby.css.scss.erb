.introductory-lobby {
<% case lobby_style %>
<% when :center_plain %>
  @include display-flex;
  @include justify-content(center);
  
  .center-plain {
    padding-top: 8rem;
    padding-bottom: 8rem;
  }
  .container {
    width: $row-width;
  }
  .about-title {
    text-align: center;
    text-transform: capitalize;
    color: <%= title_text_color %>;
  }
  .about-abstract {
    text-align: center;
    padding: 15px;
    color: <%= abstract_text_color %>;
  }
<% when :half_half %>
  @include display-flex;
  @include justify-content(space-between);
  .horizontal-cell {
    padding-top: 5rem;
    padding-bottom: 5rem;
    width: 50%;
  }
  .fishing-background {
    background: {
      image: <%= background_image_url %>;
      size: <%= background_image_size %>;
      position: <%= background_image_position %>;
    }
  }
<% when :frame_thumbnail %>
  @include display-flex;
  @include justify-content(space-between);
  margin-bottom: 3.5rem;
  .about-intro {
    @include display-flex;
    @include flex-direction(column);
    @include justify-content(center);
    @include align-items(flex-end);
    @media #{$small-only} {
      min-height: 100px;
    }
    @media #{$medium-up} {
      min-height: 445px;
    }
  }
  .intro {
    @media #{$small-only} {
      text-align: left;
    }
    @media #{$medium-up} {
      text-align: right;
    }
  }
  .about-and-so {
    @include display-flex;
    @include flex-direction(column);
    @include justify-content(center);
    @include align-items(flex-start);
    @media #{$small-only} {
      min-height: 100px;
    }
    @media #{$medium-up} {
      min-height: 445px;
    }
  }
  .and-so {
    text-align: left;
  }
  .fishing-background {
    background: {
      image: url(introductory-lobby/fishing.jpg);
      size: cover;
      position: bottom left;
    }
  }
  .summaries {
    font-size: 1.2rem;
  }  
<% end %>
}