<% case display_style %>
<% when :airbnb_quad %>
$material-indigo: #3F51B5;
$material-blue: #2196F3;
$material-amber: #FFC107;
$material-orange: #FF9800;

.airbnb-quad {
  .product-display {
    background-color: $material-indigo;
    color: fade-out(white, 0.13);
  }
}
.product-display {
  @include display-flex;
  @include flex-direction(column);
  @include justify-content(space-between);
  @include transition-property(background-color);
  @include transition-duration(300ms);
  @include transition-timing-function(ease-out);
  height: 250px;
  margin-bottom: 1rem;
  &:hover {
    background-color: darken($material-indigo, 15%);
    @include filter(brightness(0.95));
  }
  
  .media-texts {
    text-align: center;
    max-height: 200px;
    padding-left: 1rem;
    padding-right: 1rem;
    padding-bottom: 1.5rem;
    text-overflow: ellipsis;    
  }
  img.product-image {
    max-height: 250px;
    width: 100%;
  }
  .product-title {
    color: fade-out(white, 0.13);
    font-size: 1.2rem;
    font-weight: bold;
    display: block;
    text-transform: capitalize;
  }
  .product-summary {
    font-size: 0.7rem;
  }
  .tag {
    @include transition-property(background-color);
    @include transition-duration(300ms);
    @include transition-timing-function(ease-out);
    background-color: darken(red, 25%);
    &:hover {
      background-color: darken(red, 15%);
    }
    &:before {
      content: "+";
    }
    font-size: 0.7rem;
    color: #ddd;
    margin-left: 1rem;
    padding-left: 5px;
    padding-right: 10px;
    padding-top: 2.5px;
    padding-bottom: 2.5px;
    margin-right: 10px;
  }
}
<% when :media_one %>
.product-display {
  background: {
    color: #eeeeee;
  }
  &:nth-child(even) {
    background: {
      color: #e5e5e5;
    } 
  }
  &:hover {
    background: {
      color: #f1f1f1;
    }
  }
  .flex-start {
    @include display-flex;
    @include flex-direction(row);
    @include justify-content(flex-start);
  }
  .product-image {
    width: 125px;
    height: 125px;
    background: {
      size: cover;
      position: center center;
    }
  }
  .product-title {
    font-size: 1.15rem;
    font-weight: bold;
  }
  .product-summary {
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
    color: #333;
  }
  .media-texts {
    margin-left: 1rem;
    padding-bottom: 1rem;
    padding-top: 1rem;
  }
  .spec {
    margin-right: 1rem;
  }
  .product-specs {
    font-size: 0.8rem;
    color: #333;
  }
  .taxon-tags {
    margin-top: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
  }
  .tag {
    margin-left: 5px;
    margin-right: 10px;
    &::before {
      content: "+";
    }
    color: #666;
    font-weight: bold;
  }
}

<% end %>